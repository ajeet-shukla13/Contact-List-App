<html>
    <head>
        <title>
            <%=title%>
        </title>
        <script src="https://kit.fontawesome.com/ed0b27d938.js" crossorigin="anonymous"></script>
        

        <!-- our css should be below all other styles so that we can override it-->

        <!--to connect the static files-->
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        
       <h1 id="page-header">
        <i class="fa-solid fa-address-book"></i>
        My Contact List</h1>

        <div class="contact-list-container">
       <ul>
            <% for(let i of contact_list ) {%>
                <li class="contact">
                    <div class="details">
                    <p style="margin: 0; display: inline; " align-item="left"><%= i.name %></p>
                    <p style="margin: 0; display: inline;" align-item="right"><%= i.phone %></p>
                   </div>
                   <div class="close-button">
                        <a href="/delete-contact/?id=<%=i._id%>">
                            <i class="fa-solid fa-square-xmark"></i>
                        </a>
                   </div>
                </li>
            <%}%>
            </div>
            <form class="new-contact-form" action="/create-contact" method="POST">
                   <input class="input-style" type="text" name="name" placeholder="Enter Name" required>
                   <input class="input-style" type="number" name="phone" placeholder="Enter Contact" required>

                   <button class="button-solid" type="submit">Add</button>
            </form>
       </ul>
    
       <script type="text/javascript" src="/js/home.js"> </script>
    </body>
</html>